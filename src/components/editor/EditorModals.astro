<!-- New Level Modal -->
<div
  x-data
  x-show="showNewLevelModal"
  class="fixed inset-0 z-50 flex items-center justify-center bg-black/80 backdrop-blur-sm"
  style="display: none;"
  x-transition.opacity.duration.200ms
  @click.self="showNewLevelModal = false"
  @keydown.escape.window="showNewLevelModal = false"
>
  <div
    class="bg-[var(--bg-panel)] border border-[var(--border-dark)] rounded-lg shadow-2xl w-[400px] flex flex-col overflow-hidden animate-scale-in"
    @click.stop
  >
    <div
      class="h-10 bg-[var(--bg-header)] border-b border-[var(--border-dark)] flex justify-between items-center px-4 select-none"
    >
      <span class="text-sm font-bold text-[var(--text-main)]">Create New Scene</span>
      <button
        @click="showNewLevelModal = false"
        class="text-[var(--text-muted)] hover:text-white px-2 text-xl"
      >√ó</button>
    </div>

    <div class="p-6 flex flex-col gap-4">
      <div>
        <label class="text-[11px] text-[var(--text-muted)] font-bold uppercase tracking-wider block mb-2">
          Scene Name
        </label>
        <input
          type="text"
          x-model="newLevelName"
          @keydown.enter="createNewLevel(newLevelName)"
          placeholder="My Awesome Level"
          class="w-full bg-[var(--bg-input)] border border-[var(--border-light)] rounded text-sm text-white px-3 py-2 outline-none focus:border-[var(--accent-secondary)] transition-colors"
          x-ref="newLevelInput"
          x-init="$watch('showNewLevelModal', val => val && setTimeout(() => $refs.newLevelInput?.focus(), 100))"
        />
      </div>

      <div class="flex justify-end gap-2 pt-2">
        <button
          @click="showNewLevelModal = false"
          class="blender-btn"
        >
          Cancel
        </button>
        <button
          @click="createNewLevel(newLevelName)"
          class="blender-btn !bg-green-900/50 !border-green-700 hover:!bg-green-800/60"
          :disabled="!newLevelName.trim()"
          :class="!newLevelName.trim() ? 'opacity-50 cursor-not-allowed' : ''"
        >
          <span>+</span>
          <span>Create Scene</span>
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Asset Modal -->
<div
  x-data
  x-show="showAssetModal"
  class="fixed inset-0 z-50 flex items-center justify-center bg-black/80 backdrop-blur-sm"
  style="display: none;"
  x-transition.opacity.duration.200ms
  @click.self="showAssetModal = false"
>
  <div
    class="bg-[var(--bg-panel)] border border-[var(--border-dark)] rounded-lg shadow-2xl w-[850px] h-[600px] flex flex-col overflow-hidden animate-scale-in"
  >
    <div
      class="h-10 bg-[var(--bg-header)] border-b border-[var(--border-dark)] flex justify-between items-center px-4 select-none"
    >
      <span
        class="text-sm font-bold text-[var(--text-main)]"
        x-text="selectingAssetFor?.field === 'music' ? 'Select Music' : 'Asset Browser'"
        >Asset Browser</span
      >
      <button
        @click="showAssetModal = false"
        class="text-[var(--text-muted)] hover:text-white px-2 text-xl">√ó</button
      >
    </div>

    <div
      class="h-12 bg-[var(--bg-panel)] border-b border-[var(--border-light)] flex items-center px-4 gap-4"
    >
      <div class="relative flex-1 max-w-sm">
        <span
          class="absolute left-3 top-1/2 transform -translate-y-1/2 text-[var(--text-dim)] text-[12px]"
          >üîç</span
        >
        <input
          type="text"
          placeholder="Filter..."
          class="w-full bg-[var(--bg-input)] border border-[var(--border-light)] rounded-full text-[12px] text-white pl-9 pr-3 py-1.5 outline-none focus:border-[var(--accent-secondary)] transition-colors placeholder-[var(--text-dim)]"
          x-model="searchQuery"
        />
      </div>
    </div>

    <div class="flex-1 p-4 overflow-y-auto bg-[#111]">
      <div class="grid grid-cols-6 gap-3">
        <template x-for="asset in filteredAssets">
          <div
            @click="onAssetSelected(asset)"
            class="flex flex-col group cursor-pointer p-2 rounded hover:bg-[var(--bg-input-hover)] transition-colors border border-transparent hover:border-[var(--border-light)]"
          >
            <div
              class="aspect-square bg-[var(--bg-input)] rounded flex items-center justify-center mb-2 overflow-hidden relative"
            >
              <span
                class="text-3xl opacity-30 group-hover:opacity-100 transition-all transform group-hover:scale-110"
                x-text="selectingAssetFor?.field === 'music' ? 'üéµ' : 'üì¶'"
                >üì¶</span
              >
            </div>
            <span
              class="text-[10px] text-[var(--text-muted)] group-hover:text-[var(--text-main)] truncate text-center"
              x-text="getAssetName(asset)"></span>
          </div>
        </template>
      </div>
    </div>
  </div>
</div>
