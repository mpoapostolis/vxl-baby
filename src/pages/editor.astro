---
import Layout from "../layouts/Layout.astro";
import EditorOutliner from "../editor/ui/EditorOutliner.astro";
import EditorViewport from "../editor/ui/EditorViewport.astro";
import EditorInspector from "../editor/ui/EditorInspector.astro";
import EditorModals from "../editor/ui/EditorModals.astro";
import "../styles/global.css";
---

<Layout>
  <!-- Main Editor Container: Blender Dark Gray #1d1d1d background for gaps -->
  <div
    x-data="levelEditor"
    class="flex h-screen w-screen overflow-hidden bg-[var(--bg-app)] text-[var(--text-main)] font-sans text-[12px] p-2 gap-2"
  >
    <EditorOutliner />
    <EditorViewport />
    <EditorInspector />
    <EditorModals />
  </div>
</Layout>

<script>
  import Alpine from "alpinejs";
  import { editorLogic } from "../editor/logic/EditorLogic";

  // @ts-ignore
  window.Alpine = Alpine;

  // Register Alpine logic
  Alpine.data("levelEditor", editorLogic);

  Alpine.start();
</script>
